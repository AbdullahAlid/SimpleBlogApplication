@model IEnumerable<ApplicationUser>
@{
	ViewData["Title"] = "User List";
}

<table class="table">
    <thead>
        <tr>
            <td>First Name</td>
            <td>Last Name</td>
            <td>Email</td>
            <td>Validity Status</td>
            <td>Action</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.ValidityStatus</td>
                <td>
                    @if(user.ValidityStatus == UserValidityStatus.Unblocked){
                        <a class="btn btn-danger btn-sm" asp-controller="Account" asp-action="Block" asp-route-id="@user.Id">Block</a>
                    }
                    else{
                        <a class="btn btn-success btn-sm" asp-controller="Account" asp-action="Unblock" asp-route-id="@user.Id">Unblock</a>
                    }                   
                </td>
            </tr>
        }
    </tbody>
</table>
