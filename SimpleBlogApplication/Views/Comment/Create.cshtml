@model SimpleBlogApplication.ViewModel.PostComment
@{

}
<div class="container mt-5 mb-5">

    <div class="row height d-flex justify-content-center align-items-center">


        <div class="col-md-7">

            <div class="card">
                <div class="d-flex flex-row p-3">

                    @* <img src="https://i.imgur.com/zQZSWrt.jpg" width="40" height="40" class="rounded-circle mr-3"> *@

                    <div class="w-100">
                        <a asp-controller="Post" asp-action="Index">Back to the blogs list</a>
                        <h3>@Model.PostTitle</h3>


                        <p class="text-justify comment-text mb-0">@Model.PostBody</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center">
                                <span class="fw-bold">Brian selter</span>
                                @* <small class="c-badge">Top Comment</small> *@
                            </div>
                            @* <small>12h ago</small> *@
                        </div>

                        <div class="d-flex flex-row user-feed">

                            <span class="wish"><i class="bi bi-hand-thumbs-up"></i>24</span>
                            <span class="ml-3"><i class="bi bi-hand-thumbs-down"></i>23</span>
                        </div>
                    </div>
                </div>

                <div class="p-3">

                    <h6>Comments</h6>

                </div>
                <form asp-action="Create" method="post">
                    <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
                        <input type="hidden" asp-for="PostId" value="@Model.PostId" />
                        <input type="text" asp-for="CommentText" class="form-control" placeholder="Enter your comment...">&nbsp;
                        <button type="submit" class="btn btn-primary">Comment</button>
                    </div>
                </form>
                
                <div class="mt-2">
                    @foreach (var comment in Model.Comments)
                    {
                        <div class="d-flex flex-row p-3">

                            @* <img src="https://i.imgur.com/zQZSWrt.jpg" width="40" height="40" class="rounded-circle mr-3"> *@

                            <div class="w-100">

                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-row align-items-center">
                                        <span class="mr-2 fw-bold">Brian selter</span>
                                        @* <small class="c-badge">Top Comment</small> *@
                                    </div>
                                    @* <small>12h ago</small> *@
                                </div>

                                <p class="text-justify comment-text mb-0">@comment.CommentText</p>

                                @* <div class="d-flex flex-row user-feed"> *@

                                @*     <span class="wish"><i class="fa fa-heartbeat mr-2"></i>24</span> *@
                                @*     <span class="ml-3"><i class="fa fa-comments-o mr-2"></i>Reply</span> *@
                                @* </div> *@
                            </div>
                        </div>
                    }                                    
                </div>
            </div>
        </div>
    </div>
</div>
