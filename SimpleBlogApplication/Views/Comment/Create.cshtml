@using Microsoft.AspNetCore.Identity
@inject UserManager<ApplicationUser> UserManager
@model PostComment
@{

}
<div class="container mt-5 mb-5">
    <div class="row height d-flex justify-content-center align-items-center">
        <div class="col-md-7">
            <div class="card">
                <div class="d-flex flex-row p-3">
                    <div class="w-100">
                        <a asp-controller="Post" asp-action="Index">Back to the blogs list</a>
                        <h3>@Model.PostTitle</h3>
                        <p class="text-justify comment-text mb-0">@Model.PostBody</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="d-flex flex-row align-items-center">
                                <span class="fw-bold">@Model.Blogger</span>
                            </div>
                        </div>
                        <div class="d-flex flex-row user-feed">
                            <span class="wish"><i class="bi bi-hand-thumbs-up"></i>@Model.Reactions.Where(r=>r.Reaction == Reaction.Like).Count()</span>
                            <span class="ml-3"><i class="bi bi-hand-thumbs-down"></i>@Model.Reactions.Where(r => r.Reaction == Reaction.Dislike).Count()</span>
                        </div>
                    </div>
                </div>

                <div class="p-3">

                    <h6>Comments</h6>

                </div>
                <form asp-action="Create" method="post">
                    <div class="mt-3 d-flex flex-row align-items-center p-3 form-color">
                        <input type="hidden" asp-for="PostId" value="@Model.PostId" />
                        <input type="text" asp-for="CommentText" class="form-control" placeholder="Enter your comment...">&nbsp;
                        <button type="submit" class="btn btn-primary">Comment</button>
                    </div>
                </form>

                <div class="mt-2">
                    @foreach (var comment in Model.Comments.ToList())
                    {
                        long userId = (long)comment.AppUserId;
                        ApplicationUser user = UserManager.Users.FirstOrDefault(u => u.Id == userId);
                        string name = $"{user.FirstName} {user.LastName}";
                        
                        <div class="d-flex flex-row p-3">
                            <div class="w-100">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="d-flex flex-row align-items-center">
                                        <span class="mr-2 fw-bold"></span>@name
                                    </div>
                                </div>

                                <p class="text-justify comment-text mb-0">@comment.CommentText</p>

                                @* <div class="d-flex flex-row user-feed"> *@

                                @*     <span class="wish"><i class="fa fa-heartbeat mr-2"></i>24</span> *@
                                @*     <span class="ml-3"><i class="fa fa-comments-o mr-2"></i>Reply</span> *@
                                @* </div> *@
                            </div>
                        </div>
                    }                                    
                </div>
            </div>
        </div>
    </div>
</div>
